generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Example {
  id          String @id @default(uuid())
  description String
  details     String
}

model Appointment {
  id        String   @id @default(uuid())
  doctorId  String
  patientId String
  dateTime  DateTime @default(now())
  status    String // scheduled | completed | inProgress
  inQue     Boolean  @default(false)
  patient   Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  doctor    Staff    @relation(fields: [doctorId], references: [id], onDelete: Cascade)
}

model Patient {
  id           String        @id @default(uuid())
  allergies    String        @default("")
  userId       String        @unique
  appointments Appointment[]
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  reports      Report[]
}

model Staff {
  id           String        @id @default(uuid())
  userId       String        @unique
  shift        String        @default("day")
  signature String @default("")
  appointments Appointment[]
  reports      Report[]
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Report {
  id                 String              @id @default(uuid())
  illness            String
  symptoms           String
  prescription       String
  patientId          String
  doctorId           String
  dateTime           DateTime            @default(now())
  allocatedMedicines AllocatedMedicine[]
  doctor             Staff               @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  patient            Patient             @relation(fields: [patientId], references: [id], onDelete: Cascade)
}


model User {
  id            String   @id @default(uuid())
  password      String
  firstName     String
  lastName      String
  middleName    String
  nationalIdNumber String @default("N/A")
  contactNumber String
  age           Int
  gender        String
  email         String   @unique
  address       String
  title         String
  role          String // patient | doctor | other | receptionist
  status        String
  profilePhoto  String?
  createdAt     DateTime @default(now())
  Patient       Patient?
  Staff         Staff?
}
